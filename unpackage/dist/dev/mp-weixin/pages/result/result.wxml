<view class="result-container"><view class="total-score-section"><view class="score-circle"><text class="score-number">{{a}}</text><text class="score-label">总分</text></view><view class="performance-level"><text class="level-text">{{b}}</text><text class="level-desc">{{c}}</text></view></view><view class="test-info"><text class="test-time">测试用时: {{d}}秒</text><text class="test-date">{{e}}</text></view><view class="detailed-scores"><view class="section-title">详细得分</view><view wx:for="{{f}}" wx:for-item="item" wx:key="g" class="score-item"><view class="score-icon" style="{{'background-color:' + item.b}}"><text class="icon-text">{{item.a}}</text></view><view class="score-info"><view class="score-row"><text class="score-name">{{item.c}}</text><text class="score-value">{{item.d}}分</text></view><view class="score-bar"><view class="score-fill" style="{{'width:' + item.e + ';' + ('background-color:' + item.f)}}"></view></view></view></view></view><view class="action-buttons"><button class="action-btn primary" bindtap="{{g}}"><text class="btn-text">分享结果</text></button><button class="action-btn secondary" bindtap="{{h}}"><text class="btn-text">再次测试</text></button><button class="action-btn tertiary" bindtap="{{i}}"><text class="btn-text">返回首页</text></button></view></view>